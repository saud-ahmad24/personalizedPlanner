<div class="spaces">
    <center>
    <div class="card" id="wrapper" >
        <h5 class="card-header">Notes (<%=notes.length%>)</h5>
        <div class="card-body">
            <form>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Enter note here" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary submit" type="submit">Submit</button>
                    </div>
                </div>
            </form><br>

            <table class="table table-striped" id="todos">
                <tbody>
                    <% notes.forEach((item) => { %>
                    <tr>
                        <td>
                            
                            <span id="todo-item"><%= item.note %></span>
                            <div class="controls-buttons">
                            <button class="btn btn-danger remove" data-id="<%= item._id %>">remove<i class="far fa-trash-alt"></i></button>
                            <button class="btn btn-success edit" data-id="<%= item._id %>">update<i class="far fa-edit"></i></button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</center>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/js/index1.js"></script>
</div>