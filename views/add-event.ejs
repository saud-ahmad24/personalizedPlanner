<div class="spaces">
  <div class="form-input">
    <form action="/events/add-event" method="post">
        <p class="error"><%= (typeof error != "undefined" ? error : "") %></p>
        <p style="color: white;" >Event</p>
        <input type="text" name="event" id="event" autofocus autocomplete="off" placeholder="Event" required/><br><br>
        <p style="color: white;" >Desription</p>
        <textarea name="desc" id="desc" rows="10" cols="50" required></textarea><br><br>

        <!-- <input type="textarea" name="desc" id="desc" autofocus autocomplete="off" placeholder="Description" rows="2" > -->
        <p style="color: white;">Date</p>       
        <input type="date" name="date" id="date" autofocus required style="width: 200px;height:70px" ><br>

        
        <br>
        <button type="submit"><i class="fa-solid fa-plus"></i>&nbsp;Submit </button><a href="/events">Cancel</a>
      </form>
    </div>
      
</div>